@page
@model inventorySystem.Pages.Rangsit.CreateRangsitModel
@{
}

<br />
<h2>New Item</h2>

<form method="post">
    <div class="row mb-3">
            <label class="col-sm-3 colcol-form-label">New Item</label>
            <div class="col-sm-6">
                <input type="text" class="form-control"new="item" value="@Model.stockinfo.item">
            </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">StoreID</label>
        <div class="col-sm-6">
              <input  type="text" class="form-control" name="storeid" value="@Model.stockInfo.storeid">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">StoreID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="storeid" value="@Model.stockInfo.supplier">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">StoreID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="storeid" value="@Model.stockInfo.amount">
        </div>
    </div>

    @if(Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>

        </div>
    }
    
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
        
    </div>
</form>